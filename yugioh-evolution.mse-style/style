extra card field:
	type: text
	name: flavor text
	description: The flavor text for this card.
	multi line: true
extra card field:
	type: text
	name: artist
	default: styling.artist
	description: The artist of the card.
extra card field:
	type: text
	name: type
	script:
		combined_editor(
			prefix: type_prefix(),
			field1: card.type_1,
			separator1: " ",
			field2: card.type_2,
			separator2: " ",
			field3: card.type_3,
			soft_before_empty: true,
			hide_when_empty: true
		)
